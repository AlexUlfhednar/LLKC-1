{
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "config/config.php"
        ]
    },
    "require": {
        "nikic/fast-route": "^1.3",
        "twig/twig": "^3.0",
        "ext-pdo": "*"
    },
    "scripts": {
        "serve": "php -S 127.0.0.1:8000 -t public",
        "lint": [
            "vendor/bin/phpstan analyse --configuration .phpstan.neon.dist -l 9 app"
        ]
    },
    "config": {
        "process-timeout": 0
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10"
    }
}
